@model GetCarWithAllDetailsViewModel

@{
    ViewData["Title"] = "Araç Detay";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
}

<style>
    .car-detail-container {
        margin-top: 110px;
    }

    @@media (max-width: 768px) {
        .car-detail-container

    {
        margin-top: 90px;
    }

    }
</style>

<div class="container car-detail-container mb-5">
    <div class="card shadow-lg border-0 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-6">
                <img src="@Model.Model.BigImageUrl"
                     alt="Araç Resmi"
                     class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                     style="max-height: 500px;">
            </div>

            <div class="col-md-6 d-flex flex-column justify-content-center bg-light">
                <div class="card-body p-4">
                    <h3 class="card-title text-primary fw-bold mb-3">
                        @Model.Model.Brand.Name @Model.Model.ModelName
                    </h3>
                    <p class="text-muted mb-4">@Model.Model.ModelDescription</p>

                    <div class="border-start border-3 border-primary ps-3 mb-4">
                        <h5 class="fw-semibold text-dark mb-3">
                            <i class="bi bi-car-front-fill text-primary me-1"></i> Marka ve Model Bilgileri
                        </h5>
                        <p class="mb-1"><strong>Marka:</strong> @Model.Model.Brand.Name</p>
                        <p class="mb-1"><strong>Model:</strong> @Model.Model.ModelName</p>
                        <p class="mb-1"><strong>Sınıf:</strong> @Model.Model.CarClass.ClassName</p>
                        <p class="mb-1"><strong>Koltuk Sayısı:</strong> @Model.Model.Seat</p>
                        <p class="mb-1"><strong>Bagaj Kapasitesi:</strong> @Model.Model.Luggage</p>
                    </div>

                    <div class="border-start border-3 border-success ps-3">
                        <h5 class="fw-semibold text-dark mb-3">
                            <i class="bi bi-speedometer2 text-success me-1"></i> Araç Bilgileri
                        </h5>
                        <p class="mb-1"><strong>Stok No:</strong> @Model.StockNumber</p>
                        <p class="mb-1"><strong>Plaka:</strong> @Model.LicensePlate</p>
                        <p class="mb-1"><strong>Lokasyon:</strong> @Model.LocationName</p>
                        <p class="mb-1"><strong>Model Yılı:</strong> @Model.Year</p>
                        <p class="mb-1"><strong>KM:</strong> @Model.Mileage.ToString("N0") km</p>
                        <p class="mb-1"><strong>Vites:</strong> @(((TransmissionEnum)Model.Transmission).ToString())</p>
                        <p class="mb-1"><strong>Yakıt Türü:</strong> @(((FuelEnum)Model.Fuel).ToString())</p>

                        <p class="mb-1">
                            <strong>Durum:</strong>
                            @{
                                var status = (StatusEnum)Model.Status;
                                var badgeClass = status switch
                                {
                                    StatusEnum.Müsait => "bg-success",
                                    StatusEnum.Kullanımda => "bg-warning text-dark",
                                    StatusEnum.Serviste => "bg-info text-dark",
                                    StatusEnum.Kullanılamaz => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@status.ToString()</span>
                        </p>

                        <p class="mb-1"><strong>Oluşturulma Tarihi:</strong> @Model.CreatedTime.ToString("dd.MM.yyyy HH:mm")</p>
                        <p class="mb-1"><strong>Son Güncelleme Tarihi:</strong> @Model.UpdatedTime.ToString("dd.MM.yyyy HH:mm")</p>
                        <p class="mb-1"><strong>Son Kullanılan Tarih:</strong> @Model.LastUsedTime.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white border-top p-4">
            <h5 class="fw-semibold text-dark mb-2">
                <i class="bi bi-info-circle text-primary me-1"></i> Araç Açıklaması
            </h5>
            <p class="text-muted mb-0">@Model.Description</p>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
