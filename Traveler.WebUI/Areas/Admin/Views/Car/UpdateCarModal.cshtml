@using Traveler.ViewModel.BrandViewModels
@using Traveler.ViewModel.CarClassViewModels
@using Traveler.ViewModel.CarFeatureViewModels
@model UpdateCarViewModel

@{
    ViewData["Title"] = "UpdateCarModal";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";

    var brandList = (ViewBag.Brands as List<ResultBrandViewModel>)
        ?.Select(x => new SelectListItem { Text = x.Name, Value = x.BrandId.ToString() })
        .ToList();

    var carClassList = (ViewBag.CarClasses as List<ResultCarClassViewModel>)
        ?.Select(x => new SelectListItem { Text = x.ClassName, Value = x.CarClassId.ToString() })
        .ToList();

    var fuelList = Enum.GetValues(typeof(FuelEnum))
        .Cast<FuelEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var transmissionList = Enum.GetValues(typeof(TransmissionEnum))
        .Cast<TransmissionEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var statusList = Enum.GetValues(typeof(StatusEnum))
        .Cast<StatusEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var selectedFeatureIds = (ViewBag.CarFeatures as List<ResultCarFeatureViewModel>)?
        .Select(cf => cf.FeatureId)
        .ToList() ?? new List<int>();
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">Araç Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Bu sayfada araç bilgilerini güncelleyebilirsiniz.
                        </p>

                        <form asp-action="UpdateCar" asp-controller="Car" method="post">

                            <input type="hidden" asp-for="CarId" />

                            <div class="row mb-3">
                                <label asp-for="StockNumber" class="col-sm-3 col-form-label text-end">Stok No</label>
                                <div class="col-sm-9">
                                    <input asp-for="StockNumber" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Model" class="col-sm-3 col-form-label text-end">Model</label>
                                <div class="col-sm-9">
                                    <input asp-for="Model" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Year" class="col-sm-3 col-form-label text-end">Model Yılı</label>
                                <div class="col-sm-9">
                                    <input asp-for="Year" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Mileage" class="col-sm-3 col-form-label text-end">Kilometre</label>
                                <div class="col-sm-9">
                                    <input asp-for="Mileage" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Seat" class="col-sm-3 col-form-label text-end">Koltuk Sayısı</label>
                                <div class="col-sm-9">
                                    <input asp-for="Seat" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Luggage" class="col-sm-3 col-form-label text-end">Bagaj Kapasitesi</label>
                                <div class="col-sm-9">
                                    <input asp-for="Luggage" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="CoverImageUrl" class="col-sm-3 col-form-label text-end">Kapak Görsel URL</label>
                                <div class="col-sm-9">
                                    <input asp-for="CoverImageUrl" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="BigImageUrl" class="col-sm-3 col-form-label text-end">Büyük Görsel URL</label>
                                <div class="col-sm-9">
                                    <input asp-for="BigImageUrl" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="BrandId" class="col-sm-3 col-form-label text-end">Marka</label>
                                <div class="col-sm-9">
                                    <select asp-for="BrandId" asp-items="brandList" class="form-select">
                                        <option disabled value="">Marka Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="CarClassId" class="col-sm-3 col-form-label text-end">Araç Sınıfı</label>
                                <div class="col-sm-9">
                                    <select asp-for="CarClassId" asp-items="carClassList" class="form-select">
                                        <option disabled value="">Sınıf Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Fuel" class="col-sm-3 col-form-label text-end">Yakıt Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Fuel" asp-items="fuelList" class="form-select">
                                        <option disabled value="">Yakıt Türü Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Transmission" class="col-sm-3 col-form-label text-end">Vites Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Transmission" asp-items="transmissionList" class="form-select">
                                        <option disabled value="">Vites Türü Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Status" class="col-sm-3 col-form-label text-end">Durumu</label>
                                <div class="col-sm-9">
                                    <select asp-for="Status" asp-items="statusList" class="form-select">
                                        <option disabled value="">Aracın durumunu seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-sm-3 col-form-label text-end">Araç Özellikleri</label>
                                <div class="col-sm-9">
                                    <div class="row">
                                        @foreach (var feature in ViewBag.Features as List<ResultFeatureViewModel>)
                                        {
                                            <div class="col-md-3 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="SelectedFeatureIds"
                                                           value="@feature.FeatureId"
                                                           id="feature_@feature.FeatureId"
                                                           @(selectedFeatureIds.Contains(feature.FeatureId) ? "checked" : "") />
                                                    <label class="form-check-label" for="feature_@feature.FeatureId">
                                                        @feature.FeatureName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label asp-for="Description" class="col-sm-3 col-form-label text-end">Açıklama</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="offset-sm-3 col-sm-9 text-end">
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>