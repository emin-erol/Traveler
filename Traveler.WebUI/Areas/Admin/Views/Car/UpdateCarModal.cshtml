@using Traveler.ViewModel.BrandViewModels
@using Traveler.ViewModel.CarClassViewModels
@model UpdateCarViewModel

@{
    ViewData["Title"] = "UpdateCarModal";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";

    var brandList = (ViewBag.Brands as List<ResultBrandViewModel>)
        ?.Select(x => new SelectListItem { Text = x.Name, Value = x.BrandId.ToString() })
        .ToList();

    var carClassList = (ViewBag.CarClasses as List<ResultCarClassViewModel>)
        ?.Select(x => new SelectListItem { Text = x.ClassName, Value = x.CarClassId.ToString() })
        .ToList();

    var locationsList = (ViewBag.Locations as List<ResultLocationViewModel>)
        ?.Select(x => new SelectListItem { Text = x.LocationName, Value = x.LocationId.ToString() })
        .ToList();

    var fuelList = Enum.GetValues(typeof(FuelEnum))
        .Cast<FuelEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var transmissionList = Enum.GetValues(typeof(TransmissionEnum))
        .Cast<TransmissionEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var statusList = Enum.GetValues(typeof(StatusEnum))
        .Cast<StatusEnum>()
        .Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })
        .ToList();

    var selectedBrand = ViewBag.SelectedBrand as ResultBrandViewModel;
    int selectedBrandId = selectedBrand.BrandId;
}

@functions {
    public string GetPricingTypeName(int pricingType)
    {
        return Enum.GetName(typeof(PricingTypeEnum), pricingType)!;
    }
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">Araç Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Bu sayfada araç bilgilerini güncelleyebilirsiniz.
                        </p>

                        <form asp-action="UpdateCar" asp-controller="Car" method="post">

                            <input type="hidden" asp-for="CarId" />

                            <input type="hidden" asp-for="StockNumber" />

                            <input type="hidden" asp-for="CreatedTime" />

                            <input type="hidden" asp-for="LastUsedTime" />

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label text-end">Marka</label>
                                <div class="col-sm-9">
                                    <select id="brandDropdown" class="form-select">
                                        <option disabled value="">Marka Seçin</option>
                                        @foreach (var brand in ViewBag.Brands as List<ResultBrandViewModel>)
                                        {
                                            <option value="@brand.BrandId" selected="@(brand.BrandId == selectedBrandId)">
                                                @brand.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="ModelId" class="col-sm-3 col-form-label text-end">Model</label>
                                <div class="col-sm-9">
                                    <select asp-for="ModelId" id="modelDropdown" class="form-select">
                                        <option disabled selected value="">Önce Marka Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Year" class="col-sm-3 col-form-label text-end">Model Yılı</label>
                                <div class="col-sm-9">
                                    <input asp-for="Year" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="LicensePlate" class="col-sm-3 col-form-label text-end">Plaka</label>
                                <div class="col-sm-9">
                                    <input asp-for="LicensePlate" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Mileage" class="col-sm-3 col-form-label text-end">Kilometre</label>
                                <div class="col-sm-9">
                                    <input asp-for="Mileage" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="LocationId" class="col-sm-3 col-form-label text-end">Lokasyon</label>
                                <div class="col-sm-9">
                                    <select asp-for="LocationId" asp-items="locationsList" class="form-select">
                                        <option disabled value="">Lokasyon Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Fuel" class="col-sm-3 col-form-label text-end">Yakıt Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Fuel" asp-items="fuelList" class="form-select">
                                        <option disabled value="">Yakıt Türü Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Transmission" class="col-sm-3 col-form-label text-end">Vites Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Transmission" asp-items="transmissionList" class="form-select">
                                        <option disabled value="">Vites Türü Seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Status" class="col-sm-3 col-form-label text-end">Durumu</label>
                                <div class="col-sm-9">
                                    <select asp-for="Status" asp-items="statusList" class="form-select">
                                        <option disabled value="">Aracın durumunu seçin</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label asp-for="Description" class="col-sm-3 col-form-label text-end">Açıklama</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="offset-sm-3 col-sm-9 text-end">
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        const originalValues = {};
        const selectedBrandId = "@selectedBrandId";
        const selectedModelId = "@Model.ModelId";

        if (selectedBrandId) {
            $.ajax({
                url: '/Admin/Car/GetModelsOfBrand',
                type: 'GET',
                data: { brandId: selectedBrandId },
                success: function (models) {
                    var modelDropdown = $("#modelDropdown");
                    modelDropdown.empty();
                    modelDropdown.append('<option disabled value="">Model Seçin</option>');

                    $.each(models, function (i, model) {
                        var selected = model.ModelId == selectedModelId ? "selected" : "";
                        modelDropdown.append('<option value="' + model.ModelId + '" ' + selected + '>' + model.ModelName + '</option>');
                    });
                }
            });
        }

        $("#brandDropdown").change(function () {
            var brandId = $(this).val();

            if (brandId) {
                $.ajax({
                    url: '/Admin/Car/GetModelsOfBrand',
                    type: 'GET',
                    data: { brandId: brandId },
                    success: function (models) {
                        var modelDropdown = $("#modelDropdown");
                        modelDropdown.empty();
                        modelDropdown.append('<option disabled selected value="">Model Seçin</option>');

                        $.each(models, function (i, model) {
                            modelDropdown.append('<option value="' + model.ModelId + '">' + model.ModelName + '</option>');
                        });
                    }
                });
            }
        });
    });
</script>