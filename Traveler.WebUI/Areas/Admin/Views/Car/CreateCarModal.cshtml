@using Traveler.ViewModel.BrandViewModels
@using Traveler.ViewModel.CarClassViewModels
@model CreateCarViewModel

@{
    ViewData["Title"] = "Yeni Araç Ekle";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    var pricings = ViewBag.Pricings as List<ResultPricingViewModel>;
}

@functions {
    public string GetPricingTypeName(int pricingType)
    {
        return Enum.GetName(typeof(PricingTypeEnum), pricingType)!;
    }
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Araç Ekle</h4>
                        <p class="card-subtitle mb-4">
                            Lütfen araç bilgilerini eksiksiz giriniz.
                        </p>

                        <form id="createCarForm">
                            <div class="row mb-3">
                                <label asp-for="StockNumber" class="col-sm-3 col-form-label text-end">Stok No</label>
                                <div class="col-sm-9">
                                    <input asp-for="StockNumber" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Model" class="col-sm-3 col-form-label text-end">Model</label>
                                <div class="col-sm-9">
                                    <input asp-for="Model" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Year" class="col-sm-3 col-form-label text-end">Model Yılı</label>
                                <div class="col-sm-9">
                                    <input asp-for="Year" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Mileage" class="col-sm-3 col-form-label text-end">Kilometre</label>
                                <div class="col-sm-9">
                                    <input asp-for="Mileage" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Seat" class="col-sm-3 col-form-label text-end">Koltuk Sayısı</label>
                                <div class="col-sm-9">
                                    <input asp-for="Seat" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Luggage" class="col-sm-3 col-form-label text-end">Bagaj Kapasitesi</label>
                                <div class="col-sm-9">
                                    <input asp-for="Luggage" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="CoverImageUrl" class="col-sm-3 col-form-label text-end">Kapak Görsel URL</label>
                                <div class="col-sm-9">
                                    <input asp-for="CoverImageUrl" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="BigImageUrl" class="col-sm-3 col-form-label text-end">Büyük Görsel URL</label>
                                <div class="col-sm-9">
                                    <input asp-for="BigImageUrl" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="BrandId" class="col-sm-3 col-form-label text-end">Marka</label>
                                <div class="col-sm-9">
                                    <select asp-for="BrandId" class="form-select">
                                        <option disabled selected value="">Marka Seçin</option>
                                        @foreach (var brand in ViewBag.Brands as List<ResultBrandViewModel>)
                                        {
                                            <option value="@brand.BrandId">@brand.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="CarClassId" class="col-sm-3 col-form-label text-end">Araç Sınıfı</label>
                                <div class="col-sm-9">
                                    <select asp-for="CarClassId" class="form-select">
                                        <option disabled selected value="">Sınıf Seçin</option>
                                        @foreach (var cls in ViewBag.CarClasses as List<ResultCarClassViewModel>)
                                        {
                                            <option value="@cls.CarClassId">@cls.ClassName</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="LocationId" class="col-sm-3 col-form-label text-end">Lokasyon</label>
                                <div class="col-sm-9">
                                    <select asp-for="LocationId" class="form-select">
                                        <option disabled selected value="">Lokasyon Seçin</option>
                                        @foreach (var location in ViewBag.Locations as List<ResultLocationViewModel>)
                                        {
                                            <option value="@location.LocationId">@location.LocationName</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Fuel" class="col-sm-3 col-form-label text-end">Yakıt Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Fuel" class="form-select">
                                        <option disabled selected value="">Yakıt Türü Seçin</option>
                                        @foreach (FuelEnum fuel in Enum.GetValues(typeof(FuelEnum)))
                                        {
                                            <option value="@( (int)fuel )">@fuel</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Transmission" class="col-sm-3 col-form-label text-end">Vites Türü</label>
                                <div class="col-sm-9">
                                    <select asp-for="Transmission" class="form-select">
                                        <option disabled selected value="">Vites Türü Seçin</option>
                                        @foreach (TransmissionEnum trans in Enum.GetValues(typeof(TransmissionEnum)))
                                        {
                                            <option value="@( (int)trans )">@trans</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Status" class="col-sm-3 col-form-label text-end">Durumu</label>
                                <div class="col-sm-9">
                                    <select asp-for="Status" class="form-select">
                                        <option disabled selected value="">Aracın durumunu seçin</option>
                                        @foreach (StatusEnum status in Enum.GetValues(typeof(StatusEnum)))
                                        {
                                            <option value="@( (int)status )">@status</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-sm-3 col-form-label text-end">Araç Özellikleri</label>
                                <div class="col-sm-9">
                                    <div class="row">
                                        @foreach (var feature in ViewBag.Features as List<ResultFeatureViewModel>)
                                        {
                                            <div class="col-md-3 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="SelectedFeatureIds"
                                                           value="@feature.FeatureId"
                                                           id="feature_@feature.FeatureId" />
                                                    <label class="form-check-label" for="feature_@feature.FeatureId">
                                                        @feature.FeatureName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-sm-3 col-form-label text-end">Fiyatlandırma Bilgileri</label>
                                <div class="col-sm-9">
                                    <div class="row">
                                        @foreach (var pricing in pricings!)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <label class="form-label">
                                                    @pricing.Quantity @GetPricingTypeName(pricing.PricingType)
                                                </label>
                                                <input type="text"
                                                       class="form-control pricing-input"
                                                       data-pricing-id="@pricing.PricingId"
                                                       placeholder="Fiyat girin" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label asp-for="Description" class="col-sm-3 col-form-label text-end">Açıklama</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="offset-sm-3 col-sm-9 text-end">
                                    <button type="submit" class="btn btn-success">Kaydet</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#createCarForm").on("submit", function (e) {
            e.preventDefault();

            const dto = {};
            $("#createCarForm")
                .find("input[name], select[name], textarea[name]")
                .each(function () {
                const name = $(this).attr("name");
                const type = $(this).attr("type");
                if (type === "checkbox") {
                    if ($(this).is(":checked")) {
                        if (!dto[name]) {
                            dto[name] = [];
                        }
                        dto[name].push(parseInt($(this).val()));
                    }
                } else {
                    dto[name] = $(this).val();
                }
            });

            const cpDtos = [];
            $(".pricing-input").each(function () {
                const pricingId = $(this).data("pricing-id");
                const amount = parseFloat($(this).val());

                if (!isNaN(amount) && amount > 0) {
                    cpDtos.push({
                        pricingId: pricingId,
                        amount: amount,
                        carId: 0
                    });
                }
            });

            const model = {
                dto: dto,
                cpDtos: cpDtos
            };

            $.ajax({
                url: "/Admin/Car/CreateCar",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(model),
                success: function (response) {
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        alert("İşlem başarısız: " + (response.message || "Bilinmeyen hata"));
                    }
                },
                error: function () {
                    alert("Sunucu hatası oluştu.");
                }
            });
        });

    });
</script>