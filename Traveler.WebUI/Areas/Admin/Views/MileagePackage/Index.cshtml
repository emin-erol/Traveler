@model List<ResultMileagePackageViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kilometre Paketleri</h4>
                        <p class="card-subtitle mb-4">
                            Kilometre paketleri ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Paket Adı</th>
                                        <th>Kilometre Limiti</th>
                                        <th>Fiyat</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.PackageName</td>
                                            <td>@(item.PackageLimit == int.MaxValue ? "Sınırsız" : item.PackageLimit.ToString()) km</td>
                                            <td>@item.Amount TL</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a href="/Admin/MileagePackage/RemoveMileagePackage/@item.MileagePackageId" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/MileagePackage/UpdateMileagePackageModal/@item.MileagePackageId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/Admin/MileagePackage/CreateMileagePackageModal" class="m-3 btn btn-outline-primary">Kilometre Paketi Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>