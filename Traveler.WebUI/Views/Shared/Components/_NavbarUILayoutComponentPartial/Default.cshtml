@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Http
@using System.Security.Claims

<style>
    .navbar .btn {
        padding: 6px 15px;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
    }

    .navbar .btn:hover {
        background-color: #ffc107;
        color: #000;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="/Home/Index/">Travel<span>er</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menü
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a href="~/Home/Index/" class="nav-link">Anasayfa</a></li>
                <li class="nav-item"><a href="/About/Index/" class="nav-link">Hakkımızda</a></li>
                <li class="nav-item"><a href="~/Service/Index/" class="nav-link">Hizmetler</a></li>
                <li class="nav-item"><a href="~/Blog/Index/" class="nav-link">Bloglar</a></li>
                <li class="nav-item"><a href="~/Contact/Index/" class="nav-link">İletişim</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    var name = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
                    <li class="nav-item dropdown">
                        <a class="btn btn-outline-light dropdown-toggle ml-3 mt-2" href="#" id="userDropdown" data-toggle="dropdown">@name</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/Management/Settings">Ayarlar</a>
                            <a class="dropdown-item" href="/Management/Logout">Çıkış Yap</a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-primary ml-3 mt-2" href="/Management/LoginModal">Giriş Yap</a>
                    </li>
                }
            </ul>

        </div>
    </div>
</nav>